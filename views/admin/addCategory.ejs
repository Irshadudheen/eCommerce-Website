                  <div class="form-group mb-3">
                    <label for="name">Category Name
                    </label>
                    <input id="name" name="name" oninput="checkCatogoryName()" type="text" class="form-control validate" required />
                    <script>
                      function checkCatogoryName(){
                        console.log("sdohdfj,")
                        const input = document.getElementById('name').value
                        const filter = input.trim()
                        if(filter.length ==0){
                          const submitButton = document.getElementById('submit')
                          submitButton.disabled =true
                        }else if(filter.length>20){
                          const submitButton = document.getElementById('submit')
                          submitButton.disabled =true


                        }
                        else{
                          const submitButton = document.getElementById('submit')
                          submitButton.disabled =false

                        }
                      }
                    </script>
                  </div>
                  <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control validate" rows="3" oninput="checkCatogoryDescription()" id="description" name="description" required></textarea>
                    <script>
                      function checkCatogoryDescription(){
                        console.log("sdohdfj,")
                        const input = document.getElementById('description').value
                        const filter = input.trim()
                        if(filter.length ==0){
                          const submitButton = document.getElementById('submit')
                          submitButton.disabled =true
                        }else{
                          const submitButton = document.getElementById('submit')
                          submitButton.disabled =false

                        }
                      }
                    </script>
                  </div>



