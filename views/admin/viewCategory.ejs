            <div id="#load" class="tm-product-table-container">
              <input type="hidden" value="<%=category%>">
              <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>

                    <th scope="col">&nbsp;</th>
                    <th scope="col">CATEGORY NAME</th>
                    <th scope="col">DESCRIPTION</th>



                    <th scope="col">&nbsp;</th>
                  </tr>
                </thead>

                <tbody>
                  <% if(category.length>0){

                    category.forEach(data=> {%>
                    <tr id="row">
                      <th scope="row"><input type="checkbox" /></th>
                      <td class="tm-product-name"><a href="/admin/editCategory?id=<%=data._id%>"
                          style="color: #dee2e6;">
                          <%=data.name%>
                        </a></td>

                      <td>
                        <%=data.description%>
                      </td>


                      <td>


                        <span id="softDelete<%=data._id%>" onclick="statusBlock('<%=data.name%>','<%=data._id%>')"
                          class="material-symbols-outlined ">block</span>
                        <script>
                          document.addEventListener('DOMContentLoaded', () => {

                            // const storedColor = localStorage.getItem('softDeleteColor'); 
                            const icon = document.getElementById("softDelete<%=data._id%>")
                            document.querySelectorAll('[id^="softDelete<%= data._id %>"]').forEach((icon) => {
                              console.log(icon.dataset.id)
                              const storedColor = localStorage.getItem(`softDeleteColor_${icon.dataset.id}`)
                              if (storedColor) {

                                icon.style.color = storedColor;
                              }
                            })
                          });

                        </script>

                        </a>
                      </td>


                    </tr>

                    <% }) }else{ %>
                      <tr>
                        <td colspan="5">users not found</td>
                      </tr>
                      <% } %>

                </tbody>
              </table>


              <script>

                function statusBlock(name, id) {

                  icone = document.getElementById(`softDelete${id}`);
                  console.log(icone)
                  console.log(id);
                  console.log(name);
                  fetch('/admin/statusCategory', {
                    method: 'PATCH',
                    headers: {
                      'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name })
                  }).then(res => res.json()).then(data => {
                    if (data.status == true) {

                      const icon = document.getElementById(`softDelete${id}`)
                      icon.style.color = "#dee2e6"; // Set color to #dee2e6
                      localStorage.setItem(`softDeleteColor_${id}`, '#dee2e6'); // Store color in localStorage
                      Swal.fire({
                        icon: 'success',
                        title: 'unblock',
                        customClass: {
                          popup: "custom-popup-class",
                          header: 'custom-header-class',
                          content: 'custom-content-class',
                          confirmButton: 'custom-confirm-button-class'
                        }
                      });
                    } else {
                      const icon = document.getElementById(`softDelete${id}`)
                      icon.style.color = "red";
                      localStorage.setItem(`softDeleteColor_${id}`, 'red'); // Store color in localStorage
                      Swal.fire({
                        icon: 'error',
                        title: 'block',
                        customClass: {
                          popup: "custom-popup-class",
                          header: 'custom-header-class',
                          content: 'custom-content-class',
                          confirmButton: 'custom-confirm-button-class'
                        }
                      });
                    }
                  }).catch(error => {
                    console.error('Error deleting record:', error);
                  });
                }

              </script>
