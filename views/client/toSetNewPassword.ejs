    document.getElementById("lowercase").style.color = hasLowercase ? "green" : "red";
    document.getElementById("numbers").style.color = hasNumbers ? "green" : "red";
    document.getElementById("specialChars").style.color = hasSpecialChars ? "green" : "red";
    
    return (
        password.length >= minLength &&
        hasUppercase &&
        hasLowercase &&
        hasNumbers &&
        hasSpecialChars
